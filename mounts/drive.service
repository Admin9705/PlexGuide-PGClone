[Unit]
Description={{drive}} Daemon
After=multi-user.target

[Service]
Type=notify
KillMode=none
TimeoutSec=60
ExecStart=/bin/bash /opt/appdata/plexguide/{{drive}}.sh
ExecStop=/bin/fusermount -uzq /mnt/{{drive}}
Restart=on-failure
User=0
Group=0

[Install]
WantedBy=multi-user.target
